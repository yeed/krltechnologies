<!-- Responsive slider - START -->
<div class="sliderholder" style="margin-right: auto;margin-left: auto">
  <div class="responsive-slider" data-spy="responsive-slider" data-autoplay="true">
    <div class="slides" data-group="slides">
      <ul>
        <li>
        <div class="slide-body" data-group="slide">
          <%= image_tag "test3.jpg" %>
          
          <div class="caption header" data-animate="slideAppearLeftToRight" data-delay="500" data-length="800" >
            <h2 class="slidertext secondslide" style="color:lightslategray">Creators of TravelWeb Software</h2>
          </div>

          <div class="caption img-html5" style="top: 9.5%; right:10%" data-animate="slideAppearUpToDown" data-delay="200" data-length="800">
            <img src="assets/jackys.jpg" style="margin-left: -10%; margin-top: 24%;">
          </div>
          <div class="caption img-html5" data-animate="slideAppearUpToDown" data-delay="600" data-length="800" style="right: 32%;top: 19%;">
            <img src="assets/jamaica.jpg" style="margin-left: -39%; margin-top: 14%;">
          </div>
          <div class="caption img-html5" data-animate="slideAppearUpToDown" data-delay="1000" data-length="800">
            <img src="assets/travelweb.jpg" style="margin-left: -58%; margin-top: 3%;">
          </div>
          <div class="caption img-twitter" data-animate="slideAppearUpToDown">
          </div>
        </div>
      </li>
      </ul>
    </div>

    <a class="slider-control left ls-nav-prev" href="#" data-jump="prev"><</a>
    <a class="slider-control right ls-nav-next" href="#" data-jump="next">></a>
    <div class="pages">
      <a class="page" href="#" data-jump-to="1">1</a>
      <a class="page" href="#" data-jump-to="2">2</a>
    </div>
  </div>
</div>
<!-- Responsive slider - END -->


<script>
$( document ).ready( function() {
  $('.responsive-slider').responsiveSlider({
    autoplay: true,
    interval: 7000,
    transitionTime: 300
  });
});
</script>

