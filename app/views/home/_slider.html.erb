          <div class="caption header" data-animate="slideAppearLeftToRight" data-delay="500" data-length="800" >
            <h2 class="slidertext secondslide">Creators of TravelWeb Software</h2>
            <div class="caption img-html5" data-animate="slideAppearRightToLeft" data-delay="200">
              <h2 class="slidertext bottomtext secondslide">Web Based Travel Operator Software</h2>
            </div>
          </div>

          <div class="caption img-html5" style="margin-left: 20px;" data-animate="slideAppearUpToDown" data-delay="200" data-length="800">
            <img src="assets/jackys.jpg" style="margin-left: -10%; margin-top: 24%;">
          </div>
          <div class="caption img-html5" data-animate="slideAppearUpToDown" data-delay="600" data-length="800">
            <img src="assets/jamaica.jpg" style="margin-left: -39%; margin-top: 14%;">
          </div>
          <div class="caption img-html5" data-animate="slideAppearUpToDown" data-delay="1000" data-length="800">
            <img src="assets/travelweb.jpg" style="margin-left: -64%; margin-top: 3%;">
          </div>
          <div class="caption img-twitter" data-animate="slideAppearUpToDown">
          </div>
        </div>
      </li>
    </ul>
  </div>
  <a class="slider-control left ls-nav-prev" href="#" data-jump="prev"><</a>
  <a class="slider-control right ls-nav-next" href="#" data-jump="next">></a>
  <div class="pages">
    <a class="page" href="#" data-jump-to="1">1</a>
    <a class="page" href="#" data-jump-to="2">2</a>
  </div>
</div>
<!-- Responsive slider - END -->


<script>
$( document ).ready( function() {
  $('.responsive-slider').responsiveSlider({
    autoplay: true,
    interval: 7000,
    transitionTime: 300
  });
});
</script>

